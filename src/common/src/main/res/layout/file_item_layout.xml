<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/control_dp4">

    <TextView
        android:id="@+id/file_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/control_dp8"
        android:layout_marginLeft="@dimen/control_dp16"
        android:layout_marginRight="@dimen/control_dp4"
        android:layout_marginTop="@dimen/control_dp8"
        android:textColor="#000000"
        android:textSize="@dimen/textsize_18" />

    <TextView
        android:id="@+id/file_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/control_dp16"
        android:textColor="#FF4081"
        android:textSize="@dimen/textsize_16" />
</RelativeLayout>