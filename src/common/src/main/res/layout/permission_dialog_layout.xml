<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/control_float_title_width"
    android:orientation="vertical"
    android:paddingBottom="@dimen/control_dp8"
    android:paddingTop="@dimen/control_dp8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/control_dp8"
        android:layout_marginLeft="@dimen/control_dp24"
        android:layout_marginRight="@dimen/control_dp24"
        android:layout_marginTop="@dimen/control_dp8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/permission__request_permission"
            android:textColor="#212121"
            android:textSize="@dimen/permission_title_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/permission_success"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/control_dp2"
            android:layout_marginRight="@dimen/control_dp2"
            android:textColor="#FF4081"
            android:textSize="@dimen/permission_title_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/permission__splash"
            android:textColor="#212121"
            android:textSize="@dimen/permission_title_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/permission_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/control_dp2"
            android:layout_marginRight="@dimen/control_dp2"
            android:textColor="#212121"
            android:textSize="@dimen/permission_title_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/permission__right_parentheses"
            android:textColor="#212121"
            android:textSize="@dimen/permission_title_size"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/control_dp8"
        android:layout_marginLeft="@dimen/permission_info_padding"
        android:layout_marginRight="@dimen/permission_info_padding"
        android:layout_marginTop="@dimen/control_dp8">

        <ProgressBar
            android:id="@+id/permission_loading_progress"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="@dimen/permission_progress_size"
            android:layout_height="@dimen/permission_progress_size"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/control_dp8"
            android:indeterminateTint="#FF4081"
            android:visibility="visible" />

        <TextView
            android:id="@+id/permission_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:singleLine="false"
            android:text="@string/permission_default"
            android:textColor="#757575"
            android:textSize="@dimen/permission_info_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/permission_action_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/control_dp8"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/permission_third_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/control_dp8"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingBottom="@dimen/control_dp8"
            android:paddingLeft="@dimen/control_dp16"
            android:paddingRight="@dimen/control_dp16"
            android:paddingTop="@dimen/control_dp8"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/constant__cancel"
                android:textColor="#FF4081"
                android:textSize="@dimen/dialog_btn_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/permission_negative_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/control_dp8"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingBottom="@dimen/control_dp8"
            android:paddingLeft="@dimen/control_dp16"
            android:paddingRight="@dimen/control_dp16"
            android:paddingTop="@dimen/control_dp8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/constant__cancel"
                android:textColor="#FF4081"
                android:textSize="@dimen/dialog_btn_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/permission_positive_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingBottom="@dimen/control_dp8"
            android:paddingLeft="@dimen/control_dp16"
            android:paddingRight="@dimen/control_dp16"
            android:paddingTop="@dimen/control_dp8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/constant__confirm"
                android:textColor="#FF4081"
                android:textSize="@dimen/dialog_btn_text_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>