<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/perf_list_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_44"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingRight="@dimen/control_dp8">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/control_dp32"
        android:layout_height="@dimen/control_dp32"
        android:scaleType="fitCenter"
        android:src="@drawable/performance_icon" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/control_dp16"
        android:layout_weight="1"
        android:text="@string/performance__start_screen_record"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/textsize_20" />

    <TextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/control_dp8"
        android:padding="@dimen/control_dp2"
        android:text="@string/performance__record_split"
        android:textColor="@color/secondaryText"
        android:textSize="@dimen/textsize_16" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="@dimen/control_dp16"
        android:layout_height="@dimen/control_dp16"
        android:layout_marginEnd="@dimen/control_dp8"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:rotation="-90"
        android:scaleType="fitCenter"
        android:src="@drawable/angel" />
</LinearLayout>