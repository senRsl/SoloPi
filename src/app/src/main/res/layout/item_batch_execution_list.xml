<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/control_dp16"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/control_dp6"
        android:paddingTop="@dimen/control_dp6">

        <TextView
            android:id="@+id/case_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/mainFont"
            android:textSize="@dimen/textsize_16" />

        <TextView
            android:id="@+id/case_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_dp6"
            android:text=""
            android:textColor="@color/subFont"
            android:textSize="@dimen/textsize_12" />

        <TextView
            android:id="@+id/create_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_dp6"
            android:text=""
            android:textColor="@color/subFont"
            android:textSize="@dimen/textsize_12" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/batch_item_add"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/control_dp12"
        android:paddingRight="@dimen/control_dp12">

        <ImageView
            android:layout_width="@dimen/control_dp32"
            android:layout_height="@dimen/control_dp32"
            android:src="@drawable/case_step_add"
            android:tint="@color/dark_gray" />
    </LinearLayout>

</LinearLayout>