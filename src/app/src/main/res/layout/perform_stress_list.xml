<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingRight="@dimen/control_dp16">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/control_dp32"
        android:layout_height="@dimen/control_dp32"
        android:layout_marginBottom="@dimen/control_dp6"
        android:layout_marginTop="@dimen/control_dp6"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/title"
        android:layout_width="@dimen/record_float_width_dp140"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/control_dp16"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/textsize_20" />


    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/sb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.8"
        android:maxHeight="@dimen/control_dp2"
        android:paddingEnd="@dimen/control_dp12"
        android:paddingStart="@dimen/control_dp12"
        android:progressDrawable="@drawable/progress_drawable"
        android:thumb="@drawable/thumb" />

    <TextView
        android:id="@+id/stress_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text=""
        android:textColor="@color/secondaryText"
        android:textSize="@dimen/control_dp16" />

</LinearLayout>