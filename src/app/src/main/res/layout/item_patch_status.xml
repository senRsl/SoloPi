<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_patch_delete"
        android:layout_width="@dimen/control_dp40"
        android:layout_height="@dimen/control_dp64"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:layout_width="@dimen/control_dp24"
            android:layout_height="@dimen/control_dp24"
            android:layout_centerInParent="true"
            android:src="@drawable/head_icon_delete"
            android:tint="@color/mainRed" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/control_dp4"
        android:layout_marginTop="@dimen/control_dp4"
        android:layout_toLeftOf="@id/item_patch_delete"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/control_dp16"
        android:paddingRight="@dimen/control_dp8">

        <TextView
            android:id="@+id/item_patch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="minicap"
            android:textColor="@color/mainFont"
            android:textSize="@dimen/textsize_16" />

        <TextView
            android:id="@+id/item_patch_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_dp4"
            android:text="version: 6"
            android:textColor="@color/subFont"
            android:textSize="@dimen/textsize_14" />

        <TextView
            android:id="@+id/item_patch_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_dp2"
            android:text="com.alipay.hulu.minicap"
            android:textColor="@color/subFont"
            android:textSize="@dimen/textsize_14" />

    </LinearLayout>

</RelativeLayout>